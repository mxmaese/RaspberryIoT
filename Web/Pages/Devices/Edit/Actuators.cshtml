@page
@model Web.Pages.Devices.Edit.ActuatorsEditModel
@{
    ViewData["Title"] = "Edit sensors";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Devices/Devices.css" asp-append-version="true" />
}

<h1>Edit sensors</h1>
<form method="post">
    <input type="hidden" asp-for="Actuator.ActuatorId" />
    <div class="form-group">
        <label asp-for="Actuator.Name"></label>
        <input asp-for="Actuator.Name" class="form-control" />
        <span asp-validation-for="Actuator.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Actuator.AssignedVariableId"></label>
        <input asp-for="Actuator.AssignedVariableId" class="form-control" />
        <span asp-validation-for="Actuator.AssignedVariableId"></span>
    </div>
    <div class="form-group" style="text-align: -webkit-center;">
        <div style="width: 80%">
            <div style="width: 49%; text-align: center; display: inline-block">
                <label style="display: inline-block;">Token:</label>
                <label style="display: inline-block; margin-left: 10px">@Model.Actuator.Token</label>
            </div>
            <div style="width: 49%; text-align: center; display: inline-block">
                <button type="submit" class="action-btn btn-create" asp-page-handler="Regenerate">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Regenerate Token
                </button>
            </div>
        </div>
    </div>

    <button type="submit" asp-page-handler="Save"
            class="action-btn btn-create"
            style="display: inline-block; margin-left:50px;background-color:green;">
        Save
    </button>
</form>
